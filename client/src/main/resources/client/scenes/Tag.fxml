<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox fx:id="tagRoot" alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="45.0" prefWidth="600.0" stylesheets="@../css/tag.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <CheckBox fx:id="status" mnemonicParsing="false" onAction="#toggleStatus">
         <font>
            <Font size="14.0" />
         </font>
         <HBox.margin>
            <Insets left="15.0" />
         </HBox.margin>
      </CheckBox>
      <StackPane HBox.hgrow="ALWAYS">
         <children>
            <Text fx:id="title" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" StackPane.alignment="CENTER_LEFT" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </StackPane>
      <Button fx:id="editButton" mnemonicParsing="false" onAction="#editTag" text="Edit">
         <HBox.margin>
            <Insets right="15.0" />
         </HBox.margin>
      </Button>
      <Button fx:id="deleteButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#deleteTag" text="Delete">
         <HBox.margin>
            <Insets right="25.0" />
         </HBox.margin></Button>
   </children>
</HBox>
