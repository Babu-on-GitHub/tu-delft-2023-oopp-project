<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="detailedCardBox" prefHeight="650.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="cardTitle" alignment="CENTER" prefHeight="30.0" prefWidth="600.0" promptText="Card Title" />
      <TextArea fx:id="cardDescription" prefHeight="150.0" prefWidth="600.0" promptText="Add Card Description" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Subtasks">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
      </Text>
      <ScrollPane prefWidth="300.0">
         <content>
            <VBox fx:id="subtaskArea" prefHeight="170.0" prefWidth="580.0" />
         </content>
      </ScrollPane>
      <Button fx:id="subtaskButton" mnemonicParsing="false" onAction="#addSubtask" prefHeight="25.0" prefWidth="200.0" text="Add Subtask">
         <VBox.margin>
            <Insets left="200.0" right="200.0" />
         </VBox.margin>
      </Button>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tags">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
      </Text>
      <ScrollPane>
         <content>
            <HBox fx:id="tagArea" alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="580.0" />
         </content>
      </ScrollPane>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="90.0">
         <children>
            <Button fx:id="tagButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#addTag" text="Add Tag" textAlignment="CENTER" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox prefHeight="80.0" prefWidth="600.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonAction" prefHeight="50.0" prefWidth="100.0" text="CANCEL">
               <HBox.margin>
                  <Insets left="100.0" right="200.0" top="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonAction" prefHeight="50.0" prefWidth="100.0" text="SAVE">
               <HBox.margin>
                  <Insets right="100.0" top="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
