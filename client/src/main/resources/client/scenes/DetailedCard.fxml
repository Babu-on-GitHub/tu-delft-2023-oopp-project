<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="detailedCardBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="title" alignment="CENTER" prefHeight="30.0" prefWidth="600.0" promptText="Card Title">
         <font>
            <Font size="24.0" />
         </font></TextField>
      <TextArea fx:id="description" prefHeight="150.0" prefWidth="600.0" promptText="Add Card Description">
         <font>
            <Font size="16.0" />
         </font></TextArea>
      <StackPane VBox.vgrow="NEVER">
         <children>
            <Button mnemonicParsing="false" onAction="#addTask" text="Add subtask" StackPane.alignment="CENTER_RIGHT">
               <StackPane.margin>
                  <Insets right="10.0" />
               </StackPane.margin>
            </Button>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Subtasks" StackPane.alignment="CENTER_LEFT">
               <font>
                  <Font size="22.0" />
               </font>
               <StackPane.margin>
                  <Insets left="10.0" />
               </StackPane.margin>
            </Text>
         </children>
      </StackPane>
      <ScrollPane hbarPolicy="NEVER" prefWidth="300.0" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="subtaskArea" prefHeight="170.0" />
         </content>
      </ScrollPane>
      <StackPane>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tags" StackPane.alignment="CENTER_LEFT">
               <font>
                  <Font size="22.0" />
               </font>
               <StackPane.margin>
                  <Insets left="10.0" />
               </StackPane.margin>
            </Text>
            <Button mnemonicParsing="false" onAction="#addTag" text="Add tag" StackPane.alignment="CENTER_RIGHT">
               <StackPane.margin>
                  <Insets right="10.0" />
               </StackPane.margin>
            </Button>
         </children>
      </StackPane>
      <ScrollPane>
         <content>
            <HBox fx:id="tagArea" alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="590.0" />
         </content>
      </ScrollPane>
      <StackPane maxHeight="50.0" VBox.vgrow="ALWAYS">
         <children>
            <Button mnemonicParsing="false" onAction="#cancel" text="Cancel" StackPane.alignment="BOTTOM_LEFT">
               <StackPane.margin>
                  <Insets bottom="10.0" left="10.0" />
               </StackPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#save" text="Save" StackPane.alignment="BOTTOM_RIGHT">
               <StackPane.margin>
                  <Insets bottom="10.0" right="10.0" />
               </StackPane.margin>
            </Button>
         </children>
      </StackPane>
   </children>
</VBox>
